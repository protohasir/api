{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/api ./main.go",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run ./...",
        "cwd": "{projectRoot}"
      }
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "generate-mock": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mockgen -package=user -destination=internal/user/service_mock.go apps/api/internal/user Service",
          "mockgen -package=user -destination=internal/user/repository_mock.go apps/api/internal/user Repository"
        ],
        "cwd": "{projectRoot}"
      }
    }
  }
}
